{
  "compilerOptions": {
    "jsxImportSource": "@emotion/react", //support for css prop
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@/api/*": ["api/*"],
      "@/screens/*": ["screens/*"],
      "@/components/*": ["components/*"],
      //lib
      "@/hooks/*": ["hooks/*"],
      "@/ui/*": ["ui/*"],
      "@/system/*": ["system/*"],
      "@/utils/*": ["utils/*"],
    },
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"],
  "types": ["@emotion/core"],
}